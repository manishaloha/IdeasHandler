<!DOCTYPE html>
<%= javascript_include_tag "search" %>
<%= render 'modal' %>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Search</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
  </head>
  <body>
    <div class="container">
      <%= form_tag search_path,:class => "search" do %>
         <h2 class="search-heading">Search Page</h2>
         <%= label_tag "search By name" %>
         <%= autocomplete_field_tag 'name', '', autocomplete_idea_name_ideas_path%>
         <%= label_tag "search By Technology" %> 
         <%= text_field_tag :tag_name %><br/>
         <%= submit_tag "Start the AutoThink",:id => "submit" %>
      <% end %>   
    </div>
  </body>
</html>
