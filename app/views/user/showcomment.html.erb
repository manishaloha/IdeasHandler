<html>
  <head>
    <title></title>
  </head>
  <body>
    <div class="container">
      <h3>Idea</h3>
      Name: <%= @idea.name %><br/>
      Description: <%= @idea.description %><br/>
      <h3>Comments</h3>
      <% @userideas.each do |comment| %>
        <% if comment.comment != nil %>
        <%= comment.comment %><br/>
        Commented By: <%= comment.user.email %>
        <br/>
        <br/>
        <% end %>
      <% end %>
    </div>
  </body>
</html>